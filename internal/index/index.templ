package index

import (
	"farstu/internal/clock"
	"farstu/internal/gtfs"
	"farstu/internal/shared"
	"farstu/internal/yr"
)

templ View(model ViewModel, pageModel shared.PageViewModel) {
	@shared.Page(pageModel) {
		<div class="mx-3 my-3" style="padding-top:70px">
			<div class="row row-upper">
				<div class="col">
					@clock.View(model.Time)
				</div>
				<div class="col">
					@yr.YRNowView(model.YRNow)
				</div>
			</div>
			<div class="row">
				<div class="col">
					@gtfs.DeparturesView(model.Departures)
					<!--
						{{ template "htmx_sl.html" .}}
					-->
				</div>
				<div class="col">
					@yr.YRForecastView(model.YRForecast)
				</div>
			</div>
		</div>
	}
}
